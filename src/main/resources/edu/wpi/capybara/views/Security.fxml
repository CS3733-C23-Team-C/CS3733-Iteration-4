<StackPane fx:id="securityStackPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.capybara.controllers.SecurityController">
   <children>
      <BorderPane fx:id="securityPane" prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0" style="-fx-background-color: #252526;" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <MFXButton fx:id="backButton" alignment="TOP_CENTER" contentDisplay="CENTER" onAction="#returnHome" rippleColor="#b77777" style="-fx-background-color: #ffffff;" text=" ">
                           <graphic>
                              <ImageView fitHeight="28.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/back_button.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MFXButton>
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" prefHeight="50.0" prefWidth="405.0">
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Security Request Form">
                           <font>
                              <Font name="Segoe UI Black" size="30.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </top>
         <center>
            <VBox fx:id="imageVBox" alignment="CENTER" prefHeight="591.0" prefWidth="771.0" style="-fx-background-color: #a9cbde;" styleClass="body" stylesheets="@../styles/securtity_request_form.css" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="183.0" prefWidth="440.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="162.0" prefWidth="440.0" spacing="5.0" style="-fx-border-radius: 100;">
                           <children>
                              <MFXButton alignment="CENTER" buttonType="RAISED" contentDisplay="TOP" prefHeight="100.0" prefWidth="100.0" rippleColor="BLACK" text="Police">
                                 <graphic>
                                    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/police.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <HBox.margin>
                                    <Insets top="80.0" />
                                 </HBox.margin>
                              </MFXButton>
                              <MFXButton contentDisplay="TOP" prefHeight="100.0" prefWidth="100.0" text="Fire">
                                 <graphic>
                                    <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="100.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/fire.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <opaqueInsets>
                                    <Insets left="15.0" />
                                 </opaqueInsets>
                                 <HBox.margin>
                                    <Insets left="30.0" top="80.0" />
                                 </HBox.margin>
                              </MFXButton>
                              <MFXButton contentDisplay="TOP" prefHeight="100.0" prefWidth="100.0" text="Doctor">
                                 <graphic>
                                    <ImageView fx:id="doctorSecurtyRequest" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/caduceus.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <HBox.margin>
                                    <Insets left="30.0" top="80.0" />
                                 </HBox.margin>
                              </MFXButton>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children></VBox>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="135.0" prefWidth="440.0">
                     <children>
                        <MFXProgressBar prefHeight="24.0" prefWidth="361.0" />
                     </children>
                  </VBox>
               </children></VBox>
         </center>
         <right>
            <VBox alignment="CENTER" minWidth="200.0" prefHeight="516.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Employee ID" />
                  <TextField fx:id="employeeID" prefHeight="25.0" prefWidth="165.0" />
                  <HBox alignment="CENTER" maxHeight="30.0" prefHeight="200.0" prefWidth="150.0" VBox.vgrow="ALWAYS" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Location" VBox.vgrow="ALWAYS" />
                  <ChoiceBox fx:id="Location" prefWidth="150.0" />
                  <HBox maxHeight="30.0" prefHeight="200.0" prefWidth="150.0" snapToPixel="false" />
                  <Text fx:id="roomNumbers" strokeType="OUTSIDE" strokeWidth="0.0" text="Notes" VBox.vgrow="ALWAYS" />
                  <MFXTextField fx:id="notesUpdate" alignment="TOP_CENTER" borderGap="1.0" floatMode="ABOVE" floatingTextGap="10.0" graphicTextGap="1.0" maxHeight="103.0" maxWidth="153.0" measureUnitGap="1.0" prefHeight="103.0" prefWidth="153.0" VBox.vgrow="ALWAYS" />
                  <HBox maxHeight="20.0" prefHeight="100.0" prefWidth="200.0" />
                  <HBox maxHeight="20.0" prefHeight="100.0" prefWidth="200.0" />
                  <HBox alignment="CENTER" maxHeight="40.0" prefHeight="40.0" prefWidth="200.0">
                     <children>
                        <MFXButton fx:id="clearButton" style="-fx-background-color: #ffffbf;" text="Clear/Cancel">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MFXButton>
                     </children>
                  </HBox>
                  <MFXButton fx:id="SubmitButton" onAction="#submit" style="-fx-background-color: #90EE90;" text="Submit">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </MFXButton>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </right>
      </BorderPane>
   </children>
</StackPane>
