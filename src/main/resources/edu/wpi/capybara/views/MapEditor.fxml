               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <VBox minHeight="10.0" style="-fx-background-color: #F6BD38;">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin></VBox>
            <HBox prefHeight="20.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin></HBox>
         </children></VBox>
   </top>
