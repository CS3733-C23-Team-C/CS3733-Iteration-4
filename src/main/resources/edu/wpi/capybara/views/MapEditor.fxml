                        <Tab text="Nodes">
                            <content>
                                <TableView fx:id="nodeTableView" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                        <Tab text="Edges">
                            <content>
                                <TableView fx:id="edgeTableView" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                        <Tab text="Location Names">
                            <content>
                                <TableView fx:id="locationNameTableView" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                        <Tab text="Moves">
                            <content>
                                <TableView fx:id="moveTableView" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </items>
        </SplitPane>
    </center>
   <top>
      <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
