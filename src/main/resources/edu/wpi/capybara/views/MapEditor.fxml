<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.capybara.controllers.MapEditorController">
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.5" prefHeight="400.0" prefWidth="1200.0">
            <items>
                <Pane fx:id="mapViewerPane" minWidth="200.0" prefHeight="400.0" prefWidth="600.0">
